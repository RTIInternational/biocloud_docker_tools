{
    "name": "t1dgrs2_pipeline_sample",
    "inputs": {
        "working_dir": {
            "type": "str",
            "default": "",
            "required": true
        },
        "out_prefix": {
            "type": "str",
            "default": "",
            "required": true
        },
        "gvcf": {
            "type": "file",
            "default": "",
            "required": true
        },
        "sample_id": {
            "type": "str",
            "required": true
        },
        "variant_list": {
            "type": "file",
            "default": "/t1dgrs2/t1dgrs2_hg19_variants.tsv",
            "required": false
        },
        "genedx_manifest": {
            "type": "file",
            "required": true
        },
        "pass_only": {
            "type": "int",
            "default": 0,
            "required": false
        },
        "filter_by_gq": {
            "type": "int",
            "default": 0,
            "required": false
        },
        "hom_gq_threshold": {
            "type": "int",
            "default": 99,
            "required": false
        },
        "het_gq_threshold": {
            "type": "int",
            "default": 48,
            "required": false
        },
        "ref_bfile": {
            "type": "str",
            "default": "",
            "required": false
        }
    },
    "outputs": {
        "log": {
            "type": "file",
            "value": "<inputs.working_dir>t1dgrs2_pipeline_step_2.log"
        }
    },
    "entry_point": "extract_gvcf_variants",
    "entry_point_inputs": {
        "gvcf": "<inputs.gvcf>",
        "out_prefix": "<inputs.out_prefix>",
        "variant_list": "<inputs.variant_list>",
        "working_dir": "<inputs.working_dir>extract_gvcf_variants/",
        "pass_only": "<inputs.pass_only>",
        "filter_by_gq": "<inputs.filter_by_gq>",
        "hom_gq_threshold": "<inputs.hom_gq_threshold>",
        "het_gq_threshold": "<inputs.het_gq_threshold>"
    },
    "pipeline": {
        "extract_gvcf_variants": {
            "task": "extract_gvcf_variants",
            "check_output": {
                "returncode_0": {
                    "step": "convert_vcf_to_bfile",
                    "inputs": {
                        "vcf": "<steps.extract_gvcf_variants.outputs.t1dgrs2_variants_vcf>",
                        "out_prefix": "<inputs.out_prefix>"
                    }
                },
                "returncode_1": { 
                    "step": "error"
                }
            }
        },
        "convert_vcf_to_bfile": {
            "task": "convert_vcf_to_bfile",
            "check_output": {
                "returncode_0": {
                    "step": "merge_bfile_with_reference",
                    "inputs": {
                        "ref_bfile": "<inputs.ref_bfile>",
                        "sample_bed": "<steps.convert_vcf_to_bfile.outputs.bed>",
                        "sample_bim": "<steps.convert_vcf_to_bfile.outputs.bim>",
                        "sample_fam": "<steps.convert_vcf_to_bfile.outputs.fam>",
                        "out_prefix": "<inputs.out_prefix>_with_ref"
                    }
                },
                "returncode_1": { 
                    "step": "error"
                }
            }
        },
        "merge_bfile_with_reference": {
            "task": "merge_bfile_with_reference",
            "check_output": {
                "returncode_0": {
                    "step": "calculate_t1dgrs2",
                    "inputs": {
                        "bfile": "<steps.merge_bfile_with_reference.outputs.bfile>",
                        "out_prefix": "<inputs.out_prefix>_with_ref"
                    }
                },
                "returncode_1": { 
                    "step": "error"
                }
            }
        },
        "calculate_t1dgrs2": {
            "task": "calculate_t1dgrs2",
            "check_output": {
                "returncode_0": {
                    "step": "generate_file_for_export",
                    "inputs": {
                        "t1dgrs2_results_file": "<steps.calculate_t1dgrs2.outputs.results>",
                        "missing_file": "<steps.extract_gvcf_variants.outputs.missing>",
                        "sample_id": "<inputs.sample_id>",
                        "genedx_manifest": "<inputs.genedx_manifest>",
                        "output_file": "<inputs.out_prefix>_for_export.tsv"
                    }
                },
                "returncode_1": {
                    "step": "error"
                }
            }
        },
        "generate_file_for_export": {
            "task": "generate_file_for_export",
            "check_output": {
                "returncode_0": {
                    "step": "exit"
                },
                "returncode_1": { 
                    "step": "error"
                }
            }
        }
    }
}
