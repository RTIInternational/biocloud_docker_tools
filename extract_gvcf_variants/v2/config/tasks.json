{
    "process_gvcf_batch": {
        "inputs": {
            "output_dir": {
                "type": "dir"
            },
            "gvcf_list": {
                "type": "file"
            },
            "bim": {
                "type": "file"
            },
            "include_homozygous_ref": {
                "type": "int",
                "default": 0
            },
            "filter_by_qual": {
                "type": "int",
                "default": 0
            },
            "filter_by_gq": {
                "type": "int",
                "default": 0
            },
            "hom_gq_threshold": {
                "type": "int",
                "default": 99
            },
            "het_gq_threshold": {
                "type": "int",
                "default": 48
            },
            "argo_api_url": {
                "type": "str",
                "default": "http://argo-early-check-rs-1-server:2746/api/v1/workflows/early-check-rs-1"
            },
            "simultaneous_jobs": {
                "type": "int",
                "default": 50
            },
            "workflow_template": {
                "type": "str",
                "default": "ancestry"
            },
            "entrypoint": {
                "type": "str",
                "default": "ancestry_from_gvcf"
            }
        },
        "cmd": [
            "python3",
            "/pipeline/scripts/process_gvcf_batch.py",
            "--output_dir",
            "<inputs.output_dir>",
            "--gvcf_list",
            "<inputs.gvcf_list>",
            "--bim",
            "<inputs.bim>",
            "--include_homozygous_ref",
            "<inputs.include_homozygous_ref>",
            "--filter_by_qual",
            "<inputs.filter_by_qual>",
            "--filter_by_gq",
            "<inputs.filter_by_gq>",
            "--hom_gq_threshold",
            "<inputs.hom_gq_threshold>",
            "--het_gq_threshold",
            "<inputs.het_gq_threshold>",
            "--argo_api_url",
            "<inputs.argo_api_url>",
            "--simultaneous_jobs",
            "<inputs.simultaneous_jobs>",
            "--workflow_template",
            "<inputs.workflow_template>",
            "--entrypoint",
            "<inputs.entrypoint>"
        ],
        "outputs": {
            "log": {
                "type": "file",
                "value": "<inputs.output_dir>process_gvcf_batch.log"
            }
        }
    },
    "extract_gvcf_variants": {
        "inputs": {
            "output_dir": {
                "type": "dir"
            },
            "file_in_gvcf": {
                "type": "file"
            },
            "file_in_bim": {
                "type": "file"
            },
            "file_out_vcf": {
                "type": "string",
                "default": "dataset"
            },
            "include_homozygous_ref": {
                "type": "int",
                "default": 1
            },
            "filter_by_qual": {
                "type": "int",
                "default": 0
            },
            "filter_by_gq": {
                "type": "int",
                "default": 0
            },
            "hom_gq_threshold": {
                "type": "int",
                "default": 99
            },
            "het_gq_threshold": {
                "type": "int",
                "default": 48
            }
        },
        "cmd": [
            "/pipeline/scripts/extract_gvcf_variants.pl",
            "--file_in_gvcf",
            "<inputs.file_in_gvcf>",
            "--file_in_bim",
            "<inputs.file_in_bim>",
            "--file_out_vcf",
            "<inputs.file_out_vcf>",
            "--include_homozygous_ref",
            "<inputs.include_homozygous_ref>",
            "--filter_by_qual",
            "<inputs.filter_by_qual>",
            "--filter_by_gq",
            "<inputs.filter_by_gq>",
            "--hom_gq_threshold",
            "<inputs.hom_gq_threshold>",
            "--het_gq_threshold",
            "<inputs.het_gq_threshold>"
        ],
        "outputs": {
            "file_out_vcf": {
                "type": "file",
                "value": "<inputs.file_out_vcf>"
            },
            "log": {
                "type": "file",
                "value": "extract_gvcf_variants.log"
            }
        }
    },
    "convert_vcf_to_bfile": {
        "inputs": {
            "file_in_vcf": {
                "type": "file"
            },
            "file_out_prefix": {
                "type": "str",
                "default": "dataset"
            }
        },
        "cmd": [
            "plink2",
            "--vcf",
            "<inputs.file_in_vcf>",
            "--out",
            "<inputs.file_out_prefix>",
            "--make-bed"
        ],
        "outputs": {
            "bed": {
                "type": "file",
                "value": "<inputs.file_out_prefix>.bed"
            },
            "bim": {
                "type": "file",
                "value": "<inputs.file_out_prefix>.bim"
            },
            "fam": {
                "type": "file",
                "value": "<inputs.file_out_prefix>.fam"
            },
            "plink_log": {
                "type": "file",
                "value": "<inputs.file_out_prefix>.log"
            },
            "log": {
                "type": "file",
                "value": "convert_vcf_to_bfile.log"
            }
        }
    }
}
