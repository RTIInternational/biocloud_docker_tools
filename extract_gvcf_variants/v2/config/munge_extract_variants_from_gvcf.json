{
    "name": "munge_extract_variants_from_gvcf",
    "inputs": {
        "output_dir": {
            "type": "dir",
            "default": "",
            "required": true
        },
        "file_in_gvcf": {
            "type": "file",
            "default": "",
            "required": true
        },
        "file_in_bim": {
            "type": "file",
            "default": "",
            "required": true
        },
        "sample_id": {
            "type": "str",
            "default": "",
            "required": true
        },
        "include_homozygous_ref": {
            "type": "int",
            "default": 0
        },
        "filter_by_qual": {
            "type": "int",
            "default": 0
        },
        "filter_by_gq": {
            "type": "int",
            "default": 0
        },
        "hom_gq_threshold": {
            "type": "int",
            "default": 99
        },
        "het_gq_threshold": {
            "type": "int",
            "default": 48
        }
    },
    "outputs": {
        "log": {
            "type": "file",
            "value": "<inputs.output_dir>munge_extract_variants_from_gvcf.log"
        }
    },
    "entry_point": "extract_gvcf_variants",
    "entry_point_inputs": {
        "output_dir": "<inputs.output_dir>",
        "file_in_gvcf": "<inputs.file_in_gvcf>",
        "file_in_bim": "<inputs.file_in_bim>",
        "file_out_vcf": "<inputs.output_dir>extract_gvcf_variants/<inputs.sample_id>.vcf",
        "include_homozygous_ref": "<inputs.include_homozygous_ref>",
        "filter_by_qual": "<inputs.filter_by_qual>",
        "filter_by_gq": "<inputs.filter_by_gq>",
        "hom_gq_threshold": "<inputs.hom_gq_threshold>",
        "het_gq_threshold": "<inputs.het_gq_threshold>"
    },
    "pipeline": {
        "extract_gvcf_variants": {
            "task": "extract_gvcf_variants",
            "check_output": {
                "returncode_0": {
                    "step": "convert_vcf_to_bfile",
                    "inputs": {
                        "file_in_vcf": "<steps.extract_gvcf_variants.outputs.file_out_vcf>",
                        "file_out_prefix": "<inputs.output_dir>convert_vcf_to_bfile/<inputs.sample_id>"
                    }
                },
                "returncode_1": { 
                    "step": "error"
                }
            }
        },
        "convert_vcf_to_bfile": {
            "task": "convert_vcf_to_bfile",
            "check_output": {
                "returncode_0": {
                    "step": "exit"
                },
                "returncode_1": { 
                    "step": "error"
                }
            }
        }
    }
}
